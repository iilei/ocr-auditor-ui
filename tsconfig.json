{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": [
    "src"
  ],
  "files": [
    "src/types.d.ts",
    "node_modules/konva/types/index.d.ts"
  ]
}
